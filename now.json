{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@now/node-server"
        },
        {
            "src": "/public/**",
            "use": "@now/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*).js",
            "dest": "/public/$1.js"
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}
