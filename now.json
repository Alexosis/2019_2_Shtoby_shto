{
    "version": 2,
    "build": {
        "env": {
            "REMOTE_DEPLOY": "remote_deploy"
        }
    },
    "builds": [
        {
            "src": "server.js",
            "use": "@now/node-server"
        },
        {
            "src": "/dist/**",
            "use": "@now/static"
        },
        {
            "src": "package.json",
            "use": "@now/static-build"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/server.js"
        },
        {
            "src": "(.*).ico",
            "dest": "/public/$1.ico"
        }
    ]
}
